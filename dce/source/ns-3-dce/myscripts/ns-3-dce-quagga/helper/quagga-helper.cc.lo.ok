    ::mkdir (conf_dir.str ().c_str (), S_IRWXU | S_IRWXG);
    conf_dir << "usr/";
    ::mkdir (conf_dir.str ().c_str (), S_IRWXU | S_IRWXG);
    conf_dir << "local/";
    ::mkdir (conf_dir.str ().c_str (), S_IRWXU | S_IRWXG);
    conf_dir << "etc/";
    ::mkdir (conf_dir.str ().c_str (), S_IRWXU | S_IRWXG);

    conf_file << conf_dir.str () << "/bgpd.conf";
    bgp_conf->SetConfigFilename ("/usr/local/etc/bgpd.conf");

