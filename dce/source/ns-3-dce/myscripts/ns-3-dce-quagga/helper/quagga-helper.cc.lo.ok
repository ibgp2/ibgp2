    for (NodeContainer::Iterator it = nodes.Begin(); it != nodes.End(); ++it) {
        Ptr<Node> node = *it;
        Ptr<BgpConfig> bgp_conf = node->GetObject<BgpConfig>();
        if (!bgp_conf) {
            bgp_conf = CreateObject<BgpConfig>();
            bgp_conf->SetAsn (node->GetId());
            node->AggregateObject(bgp_conf);
        }
